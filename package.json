{
  "name": "cakrawala-hub-customer-portal-api",
  "version": "1.0.0",
  "description": "Customer Portal API - Port 4001",
  "scripts": {
    "build:lib": "cd ../cakrawala-hub-library-api && npm run build && rsync -a dist/ ../cakrawala-hub-core-api/libs/",
    "prebuild": "npm run build:lib",
    "build": "nest build customer-portal partner-portal",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/apps/customer-portal/main.js"
  },
  "engines": {
    "node": "24.x.x",
    "npm": "11.x.x"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.14",
    "@nestjs/schematics": "^11.0.9",
    "@types/express": "^5.0.6",
    "@types/node": "^24.10.3",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@nestjs/common": "^11.1.9",
    "@nestjs/core": "^11.1.9",
    "@nestjs/platform-express": "^11.1.9",
    "@nestjs/swagger": "^11.2.3",
    "express-basic-auth": "^1.2.1",
    "objection": "^3.1.5",
    "reflect-metadata": "^0.2.2"
  }
}